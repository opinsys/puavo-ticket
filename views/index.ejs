<!doctype html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta charset="utf-8">
        <title>Opinsys tukipalvelu</title>
        <link href="/images/favicon.png" rel="icon">
        <style>
            .initial-spinner {
              margin: 100px auto 0;
              width: 200px;
              text-align: center;
            }

            .initial-spinner > div {
              width: 50px;
              height: 50px;
              background-color: #333;

              border-radius: 100%;
              display: inline-block;
              -webkit-animation: bouncedelay 1.4s infinite ease-in-out;
              animation: bouncedelay 1.4s infinite ease-in-out;
              /* Prevent first frame from flickering when animation starts */
              -webkit-animation-fill-mode: both;
              animation-fill-mode: both;
            }

            .initial-spinner .bounce1 {
              -webkit-animation-delay: -0.32s;
              animation-delay: -0.32s;
            }

            .initial-spinner .bounce2 {
              -webkit-animation-delay: -0.16s;
              animation-delay: -0.16s;
            }

            @-webkit-keyframes bouncedelay {
              0%, 80%, 100% { -webkit-transform: scale(0.0) }
              40% { -webkit-transform: scale(1.0) }
            }

            @keyframes bouncedelay {
              0%, 80%, 100% {
                transform: scale(0.0);
                -webkit-transform: scale(0.0);
              } 40% {
                transform: scale(1.0);
                -webkit-transform: scale(1.0);
              }
            }

            .meta {
                color: transparent;
                background-color: transparent;
                border: 0;
                padding: 0;
                margin: 0;
                font-size: 8pt;
            }
        </style>
        <link href="/font-awesome/css/font-awesome.min.css?cache=<%= cacheKey %>" rel="stylesheet">
        <link href="/bootstrap/dist/css/bootstrap.min.css?cache=<%= cacheKey %>" rel="stylesheet">
        <link href="<%= cssBundle %>?cache=<%= cacheKey %>" rel="stylesheet">
    </head>
    <body>
        <div id="app">
            <div class="initial-spinner">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>

        <pre class="meta" >
            server hostname: <%= serverHostname %>
            version: <%= ptVersion %>
            uptime: <%= uptime %>
            debug mode: <%= debugMode %>
        </pre>

        <script charset="utf-8">
        window.CSRF_TOKEN = "<%- csrfToken %>";
        window.USER = <%- JSON.stringify(user, null, "    ") %>;
        </script>
        <script src="<%= jsBundle %>?cache=<%= cacheKey %>" charset="utf-8"></script>
    </body>
</html>
